{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "style": "Person",
                            "url": "https://hips.hearstapps.com/goodhousekeeping-uk/main/embedded/25836/glass_water.jpg",
                            "size": "Medium"
                        }
                    ],
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "The Water Bot!",
                            "spacing": "None",
                            "size": "ExtraLarge",
                            "height": "stretch",
                            "horizontalAlignment": "Left",
                            "wrap": true
                        }
                    ]
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "Have you had a drink of water yet today?",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": " Let me help remind you to take a drink. Set a time below and I will remind you to hydrate!",
            "wrap": true,
            "height": "stretch",
            "maxLines": 1
        }
    ],
    "actions": [
        {
            "type": "Action.ShowCard",
            "title": "Set a timer...",
            "card": {
                "type": "AdaptiveCard",
                "actions": [
                    {
                        "type": "Action.Submit",
                        "title": "OK"
                    }
                ],
                "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
                "body": [
                    {
                        "type": "Input.Date"
                    },
                    {
                        "type": "Input.Number",
                        "placeholder": "Minutes..."
                    }
                ]
            }
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4"
}